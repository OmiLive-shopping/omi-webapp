{
  "name": "express-typescript-prisma-postgresql",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run lint && npm run format && npm run test:ci",
    "build": "rm -rf dist && tsc && tsc-alias",
    "start": "node dist/server.js",
    "dev": "nodemon --signal SIGTERM --delay 200ms --ext ts --exec tsx src/server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext ts --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ci": "vitest --run",
    "test:detailed": "vitest --run --reporter=verbose",
    "test:ui": "vitest --ui",
    "prepare": "npx husky install",
    "seed": "npx prisma db seed",
    "seed:run": "tsx scripts/seed.ts run",
    "seed:reset": "tsx scripts/seed.ts reset",
    "seed:clean": "tsx scripts/seed.ts clean",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:test": "npx prisma migrate deploy",
    "db:migrate:reset": "npx prisma migrate reset --force",
    "db:generate": "npx prisma generate"
  },
  "keywords": [
    "Express",
    "Typescript",
    "Prisma",
    "PostgreSQL"
  ],
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "author": "Sushant Rahate",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@socket.io/admin-ui": "^0.5.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/commander": "^2.12.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.17.2",
    "@types/pino": "^7.0.4",
    "@types/pino-http": "^5.8.4",
    "@types/pino-pretty": "^4.7.5",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitest/coverage-v8": "^3.0.8",
    "@vitest/ui": "^3.0.8",
    "commander": "^14.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^57.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prisma": "^6.4.1",
    "supertest": "^7.0.0",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "@omi-live/shared-types": "file:../shared-types",
    "@prisma/client": "^6.4.1",
    "@types/dompurify": "^3.0.5",
    "@types/morgan": "^1.9.10",
    "@types/socket.io-client": "^1.4.36",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "better-auth": "^1.3.27",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "helmet": "^8.0.0",
    "isomorphic-dompurify": "^2.26.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.5",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "rate-limit-redis": "^4.2.1",
    "rate-limiter-flexible": "^5.0.5",
    "redis": "^5.6.0",
    "reflect-metadata": "^0.2.2",
    "rotating-file-stream": "^3.2.6",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tsyringe": "^4.10.0",
    "uni-response": "^1.0.3",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  }
}
