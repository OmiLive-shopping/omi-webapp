{
  "name": "aulianza-vite-react-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "ANALYZE=true npm run build",
    "build:preview": "npm run build && npm run preview",
    "lint": "eslint src --ext .js,ts,tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit --incremental false",
    "format": "prettier --write .",
    "format:check": "prettier -c .",
    "preview": "vite preview",
    "prepare": "husky install",
    "generate-pwa-assets": "pwa-assets-generator",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:lighthouse": "lighthouse http://localhost:5173 --view",
    "test:websocket": "vitest src/test/websocket",
    "test:websocket:unit": "vitest src/lib/**/*.spec.ts --reporter=verbose",
    "test:websocket:integration": "vitest src/test/websocket/**/*.integration.spec.ts --reporter=verbose",
    "test:websocket:performance": "vitest src/test/websocket/**/*performance*.spec.ts --reporter=verbose",
    "test:websocket:e2e": "vitest src/test/websocket/**/*e2e*.spec.ts --reporter=verbose",
    "test:websocket:smoke": "vitest src/test/websocket --run --reporter=verbose --timeout=30000",
    "test:websocket:benchmark": "vitest src/test/websocket/**/*performance*.spec.ts --run --reporter=json > benchmark-results.json",
    "check:all": "npm run validate:ui && npm run typecheck && npm run lint && npm run format:check",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "validate:ui": "node scripts/validate-ui-guidelines.js",
    "precommit": "npm run validate:ui && npm run check:all"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.9",
    "@tanstack/react-virtual": "^3.13.12",
    "axios": "^1.10.0",
    "better-auth": "^1.3.3",
    "clsx": "^1.2.1",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-router-dom": "^7.7.0",
    "socket.io-client": "^4.7.5",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@faker-js/faker": "^9.9.0",
    "@tanstack/react-query-devtools": "^5.17.9",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.3.3",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "rollup-plugin-visualizer": "^6.0.3",
    "socket.io": "^4.8.1",
    "tailwindcss": "^3.3.2",
    "terser": "^5.43.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,json}": [
      "pnpm prettier --write"
    ]
  }
}
