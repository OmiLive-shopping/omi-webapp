{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react-refresh"],
  "rules": {
    "react-refresh/only-export-components": "warn",
    "@typescript-eslint/no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_" 
    }],
    "@typescript-eslint/no-explicit-any": "warn",
    "no-restricted-imports": ["error", {
      "patterns": [{
        "group": [
          "@mui/*",
          "@bolt/*",
          "antd",
          "antd/*",
          "@chakra-ui/*",
          "react-bootstrap",
          "react-bootstrap/*",
          "@headlessui/*",
          "@radix-ui/*",
          "@mantine/*",
          "semantic-ui-react",
          "semantic-ui-react/*",
          "primereact/*",
          "@arco-design/*",
          "element-plus",
          "@fluentui/*",
          "reactstrap",
          "@nextui-org/*",
          "@tremor/*",
          "@geist-ui/*",
          "baseui",
          "grommet",
          "@blueprintjs/*"
        ],
        "message": "â›” Component libraries are PROHIBITED! Use Tailwind CSS exclusively for all UI styling. See .taskmaster/docs/ui-guidelines.md for approved patterns."
      }]
    }]
  }
}
